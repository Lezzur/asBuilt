# ─── Firebase (Client) ───────────────────────────────────────────────────────
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# ─── Firebase (Server) ───────────────────────────────────────────────────────
# Storage bucket is used by both client and admin SDK
FIREBASE_STORAGE_BUCKET=
# Full service account JSON — paste as a single-line string
FIREBASE_ADMIN_SERVICE_ACCOUNT=

# ─── LLM Providers ───────────────────────────────────────────────────────────
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ─── Email (Resend) ──────────────────────────────────────────────────────────
RESEND_API_KEY=

# ─── Cron ────────────────────────────────────────────────────────────────────
# Secret used to authenticate Vercel Cron job requests
CRON_SECRET=

# ─── GitHub OAuth ────────────────────────────────────────────────────────────
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ─── Encryption (v2+) ────────────────────────────────────────────────────────
# AES-256 key for encrypting user-provided API keys in Firestore
ENCRYPTION_KEY=

# ─── App ─────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
